.panel.panel-default
  .panel-heading
    %h3.panel-title
      Vote
  .panel-body
    .voting_booth
      .up_vote
        = link_to "  Affirm the motion", user_argument_upvote_path(current_user, @argument), class: 'vote_button btn btn-success btn-lg glyphicon glyphicon-thumbs-up'
      .down_vote
        = link_to "  Negate the motion", user_argument_downvote_path(current_user, @argument), class: 'vote_button btn btn-danger btn-lg glyphicon glyphicon-thumbs-down'



