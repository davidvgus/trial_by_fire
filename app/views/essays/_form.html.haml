= form_for [@user, @essay], html: { class: "form-horizontal" } do |f|
  - if @essay.errors.any?
    #error_explanation
      %h2= "#{pluralize(@essay.errors.count, "error")} prohibited this essay from being saved:"
      %ul
        - @essay.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :title
    = f.text_field :title, class: "form-control"
  .form-group
    = f.label :description
    = f.text_field :description, class: "form-control"
  .form-group
    = f.label :body
    = f.text_area :body, class: "form-control"
  .form-group
    = "Status: #{@essay.status}"
  .form-group
    = f.submit 'Save', class: "btn btn-default"
